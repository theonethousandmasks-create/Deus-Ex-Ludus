<ol class="items-list">
  {{#each actor.items as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <img class="item-img" src="{{item.img}}"/>
    <div class="item-details">
      <h4 class="item-name">{{item.name}}</h4>
      <textarea class="item-description" data-item-id="{{item._id}}" placeholder="Description">{{item.system.description}}</textarea>
    </div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit Item" data-action="editItem" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete Item" data-action="deleteItem" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  {{/each}}
</ol>