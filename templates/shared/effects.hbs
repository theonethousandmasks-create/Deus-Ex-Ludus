{{! Effects Tab }}
<section class="tab scrollable" data-group="primary" data-tab="effects">
  {{#each effects as |category id|}}
    {{#if category.effects.length}}
      <h3 class="effects-header flexrow">
        <span>{{category.label}}</span>
        <div class="document-controls">
          {{#if @root.editable}}
          <a class="item-control effect-create"
            title="{{localize 'DOCUMENT.Create' type='ActiveEffect'}}"
            data-action="createDoc"
            data-document-class="ActiveEffect"
          >
            <i class="fas fa-plus"></i>
            {{localize "DOCUMENT.New" type="ActiveEffect"}}
          </a>
          {{/if}}
        </div>
      </h3>
      <ul class="effects">
        {{#each category.effects as |effect|}}
          <li class="effect flexrow" data-effect-id="{{effect._id}}" data-document-class="ActiveEffect">
            <div class="effect-label flexrow">
              <img src="{{effect.img}}" title="{{effect.name}}" width="24" height="24">
              <div class="effect-name">
                <h4>{{effect.name}}</h4>
                {{#if effect.description}}
                <p>{{{effect.description}}}</p>
                {{/if}}
              </div>
            </div>
            <div class="effect-duration">
              {{#if effect.duration.remaining}}
              <span title="{{localize 'DURATION.RemainingRounds'}}">{{effect.duration.remaining}}</span>
              {{/if}}
            </div>
            <div class="document-controls">
              <a class="item-control effect-edit"
                title="{{localize 'DOCUMENT.Update' type=effect.name}}"
                data-action="viewDoc">
                <i class="fas fa-edit"></i>
              </a>
              {{#if @root.editable}}
              <a class="item-control effect-delete"
                title="{{localize 'DOCUMENT.Delete' type=effect.name}}"
                data-action="deleteDoc">
                <i class="fas fa-trash"></i>
              </a>
              <a class="item-control effect-toggle"
                title="{{localize 'DOCUMENT.Toggle' type=effect.name}}"
                data-action="toggleEffect">
                <i class="fas fa-{{#if effect.disabled}}check{{else}}times{{/if}}-circle"></i>
              </a>
              {{/if}}
            </div>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  {{/each}}
</section>